{
    "version": 5,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "all-base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "installDir": "${sourceDir}/bin/${presetName}"
        },

        {
            "name": "win64-base",
            "inherits": "all-base",
            "hidden": true,
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl",
                "CMAKE_TOOLCHAIN_FILE": "${env:VCPKG_INSTALLATION_ROOT}/scripts/buildsystems/vcpkg.cmake"
            }
        },
        {
            "name": "win64-debug",
            "displayName": "Windows x64 Debug",
            "inherits": "win64-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "RADISH_ENABLE_ASSERTIONS": true
            }
        },
        {
            "name": "win64-development",
            "displayName": "Windows x64 Development",
            "inherits": "win64-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "RADISH_ENABLE_ASSERTIONS": true
            }
        },
        {
            "name": "win64-release",
            "displayName": "Windows x64 Release",
            "inherits": "win64-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },

        {
            "name": "macos-base",
            "inherits": "all-base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_OSX_ARCHITECTURES": "arm64;x86_64"
            }
        },
        {
            "name": "macos-debug",
            "displayName": "macOS Universal Debug",
            "inherits": "macos-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "RADISH_ENABLE_ASSERTIONS": true
            }
        },
        {
            "name": "macos-development",
            "displayName": "macOS Universal Development",
            "inherits": "macos-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "RADISH_ENABLE_ASSERTIONS": true
            }
        },
        {
            "name": "macos-release",
            "displayName": "macOS Universal Release",
            "inherits": "macos-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "win64-debug",
            "displayName": "Windows x64 Debug",
            "configurePreset": "win64-debug"
        },
        {
            "name": "win64-development",
            "displayName": "Windows x64 Development",
            "configurePreset": "win64-development"
        },
        {
            "name": "win64-release",
            "displayName": "Windows x64 Release",
            "configurePreset": "win64-release"
        },

        {
            "name": "macos-debug",
            "displayName": "macOS Universal Debug",
            "configurePreset": "macos-debug"
        },
        {
            "name": "macos-development",
            "displayName": "macOS Universal Development",
            "configurePreset": "macos-development"
        },
        {
            "name": "macos-release",
            "displayName": "macOS Universal Release",
            "configurePreset": "macos-release"
        }
    ]
}